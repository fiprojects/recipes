<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyRecipes</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <i class="fa fa-cutlery"></i>
                    MyRecipes
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-home"></i>
                            Home
                        </a>
                    </li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-folder-open"></i>
                            Categories <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            @await Component.InvokeAsync("CategoryMenu")
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Search" asp-action="Show">
                            <i class="fa fa-search"></i>
                            Search
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (!User.IsInRole("User"))
                        {
                            <a asp-area="" asp-controller="Login" asp-action="Show">
                                <i class="glyphicon glyphicon-log-in"></i>&nbsp;Log In
                            </a>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" 
                                   aria-haspopup="true" aria-expanded="false">
                                    <i class="glyphicon glyphicon-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="https://github.com/pv254/recipes" target="_blank">
                                            <i class="glyphicon glyphicon-info-sign"></i>&nbsp;About the application
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        <a asp-controller="Login" asp-action="LogOut">
                                            <i class="glyphicon glyphicon-log-out"></i>&nbsp;Log out
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </li>
                </ul>
            </div>
            
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                MyRecipes 2017
                |
                <i class="fa fa-cog"></i>
                <a asp-area="" asp-controller="Search" asp-action="Show">System Information</a>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
