@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>
<div>
    Find by description: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
</div>
<br />
<div>
    Cooking time: @Html.TextBox( "Time", ViewBag.CurrrentFilter as string)
</div>
<br />
<div class="form-group">
    <label class="col-md-2 control-label">Categories</label>
    <div class="col-md-10">
        @Html.DropDownList("Category", new SelectList(Model.Categories))
    </div>
</div>
<br />
<div>
    @foreach (var kvp in Model.Selected)
    {
        <input type="checkbox" name="@("Model.Selected[" + kvp.Key + "]")"
               value="@kvp.Value" label="@kvp.Key"><span>&nbsp;@kvp.Key&nbsp;</span>
    }
</div>


